<header class="header">
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="@Url.Action("Index", "Home")" class="logo-link">
                    <i class="fas fa-spa"></i>
                    <span>Pilates Studio</span>
                </a>
            </div>

           
            <button class="menu-toggle" aria-label="Toggle navigation">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>

            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("AboutPilates", "Home")" class="nav-link">About Pilates</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Schedule", "Course")" class="nav-link">Schedule</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("FilterSearch", "Course")" class="nav-link">Course Search</a>
