<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" >
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pilates Studio</title>
    <link href="~/Content/Custom.css" rel="stylesheet" >
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Allison&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    @Html.Partial("_Header")

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    @Html.Partial("_Footer")


    <script src="~/Scripts/ScrollAnimation.js"></script>

    <!-- Validation Links -->
    <div class="validation-links">
        <a href="https://validator.w3.org/check?uri=referer" target="_blank">HTML5 Validator</a> |
        <a href="https://jigsaw.w3.org/css-validator/check/referer" target="_blank">CSS3 Validator</a>
    </div>
    <!-- 在您的网站页脚或其他适当位置添加 -->
    <div class="validation-badge">
        <a href="https://jigsaw.w3.org/css-validator/check/referer">
            <img style="border:0;width:88px;height:31px"
                 src="https://jigsaw.w3.org/css-validator/images/vcss-blue"
                 alt="Valid CSS!">
        </a>
    </div>

    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>