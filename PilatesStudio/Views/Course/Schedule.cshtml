@model List<PilatesStudio.Models.Course>
@{
    ViewBag.Title = "Course Schedule - Pilates Studio";
}

<section class="schedule-hero">
    <div class="container">
        <h1>Course Schedule</h1>
        <p>View our course timetable and choose the right class for you</p>
        <div class="hero-actions">
            <a href="#schedule-content" class="cta-button">View Courses</a>
            <a href="@Url.Action("FilterSearch", "Course")" class="cta-button secondary">Advanced Search</a>
        </div>
    </div>
</section>

<section id="schedule-content" class="schedule-content">
    <div class="container">
        <!-- Success Message -->
        @if (TempData["BookingSuccess"] != null)
        {
            <div class="alert-success-message">
                @TempData["BookingSuccess"]
            </div>
        }

        <div class="schedule-grid">
            @foreach (var course in Model)
            {
                <div class="course-card">
                    <div class="course-image">
                        <img src="@course.ImageUrl" alt="@course.Title"
                             onerror="this.src='data:image/svg+xml;base64,'">
                    </div>
                    <div class="course-info">
                        <h3>@course.Title</h3>
                        <p class="course-description">@course.Description</p>
                        <div class="course-details">
                            <p><i class="fas fa-user"></i> Instructor: @course.Instructor</p>
                            <p><i class="fas fa-clock"></i> Time: @course.Schedule.ToString("MM/dd HH:mm")</p>
                            <p><i class="fas fa-stopwatch"></i> Duration: @course.Duration</p>
                            <p><i class="fas fa-signal"></i> Level: @course.Level</p>
                            <p><i class="fas fa-tag"></i> Price: ¥@course.Price</p>
                            <p><i class="fas fa-users"></i> Available Spots: @course.AvailableSpots</p>
                        </div>
                        @if (course.AvailableSpots > 0)
                        {
                            <a href="@Url.Action("BookCourse", new { id = course.Id })" class="book-button">Book Now</a>
                        }
                        else
                        {
                            <button class="book-button disabled" disabled>Fully Booked</button>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Scripts/ScrollAnimation.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('✅ Schedule page loaded (Native JS)');

      
            const courseCards = document.querySelectorAll('.course-card');
            courseCards.forEach(card => {
                card.classList.add('fade-in');
            });

            const viewCoursesBtn = document.querySelector('.cta-button[href="#schedule-content"]');
            if (viewCoursesBtn) {
                viewCoursesBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector('#schedule-content').scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            }
            setTimeout(function () {
                window.dispatchEvent(new Event('scroll'));
            }, 100);
        });
    </script>
}
@section styles {
    <link href="~/Content/Schedule.css" rel="stylesheet" />
}