@model PilatesStudio.Models.ContactForm
@{
    ViewBag.Title = "Contact Us - Pilates Studio";
}

<section class="contact-hero">
    <div class="container">
        <h1>Contact Us</h1>
        <p>We'd love to hear your feedback and suggestions</p>
    </div>
</section>

<section class="contact-content">
    <div class="container">
        <div class="contact-grid">
            <div class="contact-info">
                <h2>Studio Information</h2>
                <div class="info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div>
                        <h3>Address</h3>
                        <p>123 Some Street, Chaoyang District, Beijing</p>
                    </div>
                </div>
                <div class="info-item">
                    <i class="fas fa-phone"></i>
                    <div>
                        <h3>Phone</h3>
                        <p>138-0013-8000</p>
                    </div>
                </div>
                <div class="info-item">
                    <i class="fas fa-envelope"></i>
                    <div>
                        <h3>Email</h3>
                        <p><a href="mailto:info@pilatesstudio.com">info@pilatesstudio.com</a></p>
                    </div>
                </div>
                <div class="info-item">
                    <i class="fas fa-clock"></i>
                    <div>
                        <h3>Business Hours</h3>
                        <p>Monday - Friday: 6:00 - 22:00</p>
                        <p>Weekends: 7:00 - 20:00</p>
                    </div>
                </div>
            </div>

            <div class="contact-form">
                <h2>Send Message</h2>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-success-message">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @using (Html.BeginForm("Feedback", "Contact", FormMethod.Post, new { id = "contactForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="Name" class="form-label">Name</label>
                        @Html.TextBoxFor(m => m.Name, new
                        {
                            @class = "form-control",
                            placeholder = "Please enter your name",
                            id = "Name"
                        })
                        <span class="validation-error" data-for="Name"></span>
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Email" class="form-label">Email</label>
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "form-control",
                            placeholder = "Please enter your email",
                            id = "Email"
                        })
                        <span class="validation-error" data-for="Email"></span>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Phone" class="form-label">Phone (Optional)</label>
                        @Html.TextBoxFor(m => m.Phone, new
                        {
                            @class = "form-control",
                            placeholder = "Please enter your phone (optional)",
                            id = "Phone"
                        })
                        <span class="validation-error" data-for="Phone"></span>
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Message" class="form-label">Message</label>
                        @Html.TextAreaFor(m => m.Message, new
                        {
                            @class = "form-control",
                            rows = 5,
                            placeholder = "Please enter your message...",
                            id = "Message"
                        })
                        <span class="validation-error" data-for="Message"></span>
                        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="submit-button">Send Message</button>
                }
            </div>
        </div>
    </div>
</section>

<style>
    .alert-success-message {
        background: #d4edda;
        color: #155724;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1rem;
        border: 1px solid #c3e6cb;
    }

    .validation-error {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 0.25rem;
        display: block;
    }

    .form-control.error {
        border-color: #dc3545;
    }
</style>

@section scripts {
    <script src="~/Scripts/FeedbackForm.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('✅ Contact page loaded (Native JS)');

            const contactSections = document.querySelectorAll('.contact-info, .contact-form');
            contactSections.forEach(section => {
                section.classList.add('fade-in');
            });

         
            setTimeout(function () {
                window.dispatchEvent(new Event('scroll'));
            }, 100);
        });
    </script>
}